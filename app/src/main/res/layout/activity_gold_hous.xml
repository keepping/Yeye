<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page_glodhous"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingLeft="17sp"
        android:paddingTop="13dp"
        android:src="@drawable/btn_nav_back_w"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:maxLines="1"
        android:text="@string/gold_hous"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/Transaction_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:paddingRight="13dp"
        android:paddingTop="15dp"
        android:text="@string/gold_transaction_m"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap,RtlSymmetry" />

    <com.will.view.library.SwipyRefreshLayout
        android:id="@+id/pullToRefreshView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sucai"
        android:layout_marginTop="170dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="10dp"
            android:scrollbars="none" />
    </com.will.view.library.SwipyRefreshLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="@string/gold_hous_tips"
        android:textColor="#FFB1A6F6"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:text="@string/gold_tips"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/btn_upload_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:contentDescription="@null"
        android:src="@drawable/btn_goldhous_goods_upload_pic" />


    <ImageView
        android:id="@+id/sucai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@null"
        android:src="@drawable/bg_goldhous_sucai1" />
</RelativeLayout>