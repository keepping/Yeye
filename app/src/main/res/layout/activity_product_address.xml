<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9"
    android:orientation="vertical">

    <com.angelatech.yeyelive1.view.HeaderLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/headerLayout"
        android:background="@color/font_line" />

    <View
        android:id="@+id/view17"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="10dp"
        android:background="@color/font_line" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view17"
        android:background="@color/white"
        android:hint="@string/address_hint_name"
        android:paddingLeft="20dp"
        android:textColorHint="#FFE0E0E0"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/view19"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:background="@color/font_line" />

    <EditText
        android:id="@+id/phone_str"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view19"
        android:background="@color/white"
        android:hint="@string/address_hint_phone"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColorHint="#FFE0E0E0"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/view18"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_str"
        android:layout_marginLeft="20dp"
        android:background="@color/font_line" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view18"
        android:background="@color/white"
        android:gravity="center_vertical|top"
        android:hint="@string/address_hint_address"
        android:minHeight="100dp"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:textColorHint="#FFE0E0E0"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/view20"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address"
        android:background="@color/font_line" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_coner_ctl_live_bg"
        android:text="@string/address_save"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>