<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.angelatech.yeyelive.view.HeaderLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_d5" />

    <!--选择地区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/phone_login_country_area"
            android:textColor="@color/color_232323"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/select_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/btn_next"
            android:gravity="right"
            android:text="呵呵呵"
            android:textColor="@color/color_a6a6a6"
            android:textSize="14dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="@color/color_eaeaea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/area_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/color_222222" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:background="@color/color_eaeaea" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/phone_login_input_phone"
            android:textColorHint="@color/color_a6a6a6"
            android:textSize="14dp"
            android:inputType="number"
            android:paddingLeft="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="@color/color_eaeaea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_verification_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:textColorHint="@color/color_a6a6a6"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/phone_login_input_code"
            android:textSize="14dp"
            android:inputType="number"
            android:paddingLeft="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@color/color_eaeaea"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"/>

            <TextView
                android:id="@+id/send_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="14dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/phone_login_send_code"
                android:textColor="@color/color_222222" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_d5" />

    <TextView
        android:id="@+id/hint_textview"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:paddingLeft="14dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_222222"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="@string/phone_login_next_step"
        android:textColor="@color/color_222222"
        android:textSize="16sp"/>

</LinearLayout>