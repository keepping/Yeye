<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/txt_barname"
            android:layout_width="109dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_room_name"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="7"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:paddingLeft="22dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:textColor="#222222"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_likenum"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_barname"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_room_intimacy"
            android:drawableLeft="@drawable/icon_room_intimacy"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="1dp"
            android:paddingLeft="23dp"
            android:paddingTop="1dp"
            android:text="--"
            android:textColor="#FEFEFE"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/red_shape" />

        <com.xj.frescolib.View.FrescoRoundView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="1dp"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@drawable/default_face_icon"
            fresco:roundAsCircle="true" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignBottom="@id/img_head"
            android:layout_alignRight="@id/img_head"
            android:layout_marginBottom="2dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_vip_mark"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>