<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.angelatech.yeyelive.view.HeaderLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_d5" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/light_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Tab_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/rank_seven_dedicated"
            android:textColor="@color/font_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Tab_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/rank_history_dedicated"
            android:textColor="@color/font_grey"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:scaleType="matrix"
        android:src="@color/color_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mAbSlidingTabView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>